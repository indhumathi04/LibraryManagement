@model IEnumerable<LibraryManagementSystem.Models.BooksAvailable>

@{
    ViewData["Title"] = "viewBooks";
}


<h1 class="text-center">Books Available</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <section class="col-lg-3 col-md-6 py-3">
            <div class="card" style="width: 18rem;">
                <img src=@item.ImageUrl class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <h6 class="card-subtitle mb-2 text-muted">by @Html.DisplayFor(modelItem => item.Author)</h6>
                    <button class="btn-info">
                      <a asp-action="Details" asp-route-id="@item.BookId" class="text-decoration-none" style="color:white">Know more</a> 
                    </button>
                </div>
            </div>
        </section>
    }
</div>